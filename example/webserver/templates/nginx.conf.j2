server {
    listen {{ nginx_port }} default_server;
    listen [::]:{{ nginx_port }} default_server;
    server_name _;
    
    # Добавляем корневую директорию на случай статических файлов
    root /var/www/html;
    
    location / {
        proxy_pass http://127.0.0.1:{{ app_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Добавляем таймауты для надежности
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
    
    location /health {
        proxy_pass http://127.0.0.1:{{ app_port }}/health;
        proxy_set_header Host $host;
        access_log off;
    }
    
    # Добавляем обработку статических файлов если они есть
    location /static/ {
        alias {{ app_home }}/app/static/;
        expires 30d;
        try_files $uri $uri/ =404;
    }
    
    access_log {{ app_home }}/logs/nginx-access.log;
    error_log {{ app_home }}/logs/nginx-error.log;
}
data_directory = '{{ postgresql_data_dir }}'
hba_file = '{{ postgresql_data_dir }}/pg_hba.conf'
ident_file = '{{ postgresql_data_dir }}/pg_ident.conf'

# Connection Settings
listen_addresses = '{{ postgresql_listen_addresses }}'
port = {{ postgresql_port }}
max_connections = {{ postgresql_max_connections }}

# Memory Settings
shared_buffers = {{ postgresql_shared_buffers }}
work_mem = {{ postgresql_work_mem }}
maintenance_work_mem = {{ postgresql_maintenance_work_mem }}

# Write-Ahead Log
wal_level = {{ postgresql_wal_level }}
full_page_writes = on

# Logging
log_destination = 'stderr'
logging_collector = on
log_directory = '{{ postgresql_log_dir }}'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_rotation_age = 1d
log_rotation_size = 10MB

# Locale
lc_messages = 'en_US.UTF-8'
lc_monetary = 'ru_RU.UTF-8'
lc_numeric = 'ru_RU.UTF-8'
lc_time = 'ru_RU.UTF-8'
default_text_search_config = 'pg_catalog.russian'